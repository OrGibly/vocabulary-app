<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item><!--The farthest shadow layer from the content-->
        <shape>
            <solid android:color="@color/shadow1"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:top="1px" android:bottom="1px" android:left="1px" android:right="1px">
        <shape>
            <solid android:color="@color/shadow2"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:top="2px" android:bottom="2px" android:left="2px" android:right="2px">
        <shape>
            <solid android:color="@color/shadow3"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>
    <!--The closest shadow layer to the content-->
    <item android:top="3px" android:bottom="3px" android:left="3px" android:right="3px">
        <shape>
            <solid android:color="@color/shadow4"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>
</layer-list>