<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/greyRed2"/>
            <stroke android:color="@android:color/black" android:width="3px"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/greyRed"/>
            <stroke android:color="@android:color/black" android:width="2px"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/lightPurple"/>
            <stroke android:color="@android:color/white" android:width="3dp"/>
        </shape>
    </item>

</selector>